{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
        "brace-style": ["error", "1tbs"],
        "semi": ["error", "always"],
        "indent": ["error", "tab"],
        "max-nested-callbacks": ["error", { "max": 4}]
	}
}